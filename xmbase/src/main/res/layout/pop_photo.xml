<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_pop_white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_change_head"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="@color/colorText8"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            />
        <View
            style="@style/horizontalLine"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_gray"
            android:textSize="18sp"
            android:textColor="@color/colorText3"
            android:text="@string/btn_take_photo"
            android:id="@+id/photo_tv"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>
        <View
            style="@style/horizontalLine"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_white_bottom"
            android:textSize="18sp"
            android:id="@+id/gallery_tv"
            android:textColor="@color/colorText3"
            android:text="@string/btn_choose_photo"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_cancel"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:id="@+id/cancel_tv"
        android:gravity="center"
        android:textColor="@color/colorText3"
        android:background="@drawable/ripple_pop_white"
        />


</LinearLayout>